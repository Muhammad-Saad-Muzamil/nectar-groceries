<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nectar.Splash"
        tools:targetApi="31">

        <activity
            android:name=".OrderSuccessActivity"
            android:exported="false" />

        <activity
            android:name=".ui.home.ProductdetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LocationActivity"
            android:exported="false"
            android:theme="@style/Theme.Nectar.Splash" />
        <activity
            android:name=".ui.auth.VerificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.NumberActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SigninActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.Nectar.Splash"
            tools:ignore="MissingClass" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Nectar.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" android:theme="@style/Theme.Nectar" />


    </application>

</manifest>