<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Diet Coke -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/dietCokeImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/diet_coke"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dietCokeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Coke"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dietCokeDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="335ml, Price"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/dietCokePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1.99"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sprite Can -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/spriteCanImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sprite_can"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/spriteCanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sprite Can"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/spriteCanDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="325ml, Price"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/spriteCanPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1.50"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Apple & Grape Juice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/appleGrapeJuiceImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/apple_juice"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appleGrapeJuiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple and Grape Juice"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/appleGrapeJuiceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2L, Price"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/appleGrapeJuicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$15.99"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Orange Juice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/orangeJuiceImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/orange_juice"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orangeJuiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orange Juice"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/orangeJuiceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2L, Price"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/orangeJuicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$15.99"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Coca Cola Can -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/cocaColaCanImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/coca_cola_can"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cocaColaCanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coca Cola Can"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cocaColaCanDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="325ml, Price"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/cocaColaCanPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$4.99"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Pepsi Can -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/pepsiCanImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pepsi_can"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pepsiCanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pepsi Can"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pepsiCanDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330ml, Price"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/pepsiCanPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$4.99"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>